{
    "name": "ng-snippets",
    "version": "0.0.0-development",
    "homepage": "https://ngsnippets.com",
    "scripts": {
        "ng": "ng",
        "start": "ng serve --project ng-snippets-com",
        "start:demo": "ng serve --project ng-snippets-demo --port 4201",
        "build": "ng build --project ng-snippets-com",
        "build:lib": "ng build --project ng-snippets",
        "test:lib": "ng test --project ng-snippets",
        "test:lib-headless": "ng test --project ng-snippets --no-watch --no-progress --browsers=ChromeHeadlessCI",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "prettier:check": "prettier --check '*.{html,scss,ts,js,json}'",
        "prettier:write": "prettier --write '*.{html,scss,ts,js,json}'",
        "format": "npm run prettier:write && npm run lint:fix",
        "explore-bundle": "npm run build -- --source-map --named-chunks && source-map-explorer dist/ng-snippets-com/*.js",
        "explore-bundle:demo": "ng build --project ng-snippets-demo --source-map --named-chunks && source-map-explorer dist/ng-snippets-demo/*.js",
        "deploy": "npm run build && firebase deploy",
        "publish:lib": "npm run build:lib && cd dist/ng-snippets && npm publish",
        "semantic-release": "semantic-release",
        "prepare": "husky install"
    },
    "private": false,
    "dependencies": {
        "@angular/animations": "^14.0.0",
        "@angular/common": "^14.0.0",
        "@angular/compiler": "^14.0.0",
        "@angular/core": "^14.0.0",
        "@angular/elements": "^14.0.0",
        "@angular/forms": "^14.0.0",
        "@angular/platform-browser": "^14.0.0",
        "@angular/platform-browser-dynamic": "^14.0.0",
        "@angular/router": "^14.0.0",
        "marked": "^4.0.12",
        "ngx-highlightjs": "^6.1.1",
        "rxjs": "~7.4.0",
        "tslib": "^2.3.0",
        "zone.js": "~0.11.4"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^14.0.0",
        "@angular-eslint/builder": "14.0.0",
        "@angular-eslint/eslint-plugin": "14.0.0",
        "@angular-eslint/eslint-plugin-template": "14.0.0",
        "@angular-eslint/schematics": "14.0.0",
        "@angular-eslint/template-parser": "14.0.0",
        "@angular/cli": "^14.0.0",
        "@angular/compiler-cli": "^14.0.0",
        "@commitlint/cli": "^16.2.1",
        "@commitlint/config-angular": "^16.2.1",
        "@tailwindcss/typography": "^0.5.1",
        "@types/jasmine": "~3.10.0",
        "@types/marked": "^4.0.2",
        "@types/node": "^12.11.1",
        "@typescript-eslint/eslint-plugin": "^5.29.0",
        "autoprefixer": "^10.4.2",
        "eslint": "^8.18.0",
        "husky": "^7.0.0",
        "jasmine-core": "~3.10.0",
        "karma": "~6.3.0",
        "karma-chrome-launcher": "~3.1.0",
        "karma-coverage": "~2.0.3",
        "karma-jasmine": "~4.0.0",
        "karma-jasmine-html-reporter": "~1.7.0",
        "lint-staged": "^12.3.5",
        "ng-packagr": "^14.3.0",
        "postcss": "^8.4.6",
        "prettier": "^2.5.1",
        "semantic-release": "^19.0.2",
        "source-map-explorer": "^2.5.2",
        "tailwindcss": "^3.0.19",
        "typescript": "~4.7.4"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/ertunga/ng-snippets.git"
    },
    "license": "MIT"
}
