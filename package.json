{
    "name": "ng-snippets",
    "version": "0.0.0-development",
    "homepage": "https://ngsnippets.com",
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "start:demo": "ng serve --project ng-snippets-demo --port 4201",
        "build": "ng build",
        "build:lib": "ng build ng-snippets",
        "test": "ng test",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "prettier:check": "prettier --check '*.{html,scss,ts,js,json}'",
        "prettier:write": "prettier --write '*.{html,scss,ts,js,json}'",
        "format": "npm run prettier:write && npm run lint:fix",
        "explore-bundle": "ng build --source-map --named-chunks && source-map-explorer dist/**/*.js",
        "deploy": "ng build && firebase deploy",
        "publish:lib": "npm run build:lib && cd dist/ng-snippets && npm publish",
        "semantic-release": "semantic-release",
        "prepare": "husky install"
    },
    "private": false,
    "dependencies": {
        "@angular/animations": "~13.2.2",
        "@angular/common": "~13.2.2",
        "@angular/compiler": "~13.2.2",
        "@angular/core": "~13.2.2",
        "@angular/elements": "^13.2.2",
        "@angular/forms": "~13.2.2",
        "@angular/platform-browser": "~13.2.2",
        "@angular/platform-browser-dynamic": "~13.2.2",
        "@angular/router": "~13.2.2",
        "marked": "^4.0.12",
        "ngx-highlightjs": "^6.1.1",
        "rxjs": "~7.4.0",
        "tslib": "^2.3.0",
        "zone.js": "~0.11.4"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "~13.2.3",
        "@angular-eslint/builder": "13.0.1",
        "@angular-eslint/eslint-plugin": "13.0.1",
        "@angular-eslint/eslint-plugin-template": "13.0.1",
        "@angular-eslint/schematics": "13.0.1",
        "@angular-eslint/template-parser": "13.0.1",
        "@angular/cli": "~13.2.3",
        "@angular/compiler-cli": "~13.2.2",
        "@commitlint/cli": "^16.2.1",
        "@commitlint/config-angular": "^16.2.1",
        "@tailwindcss/typography": "^0.5.1",
        "@types/jasmine": "~3.10.0",
        "@types/marked": "^4.0.2",
        "@types/node": "^12.11.1",
        "@typescript-eslint/eslint-plugin": "5.3.0",
        "autoprefixer": "^10.4.2",
        "eslint": "^8.2.0",
        "husky": "^7.0.0",
        "jasmine-core": "~3.10.0",
        "karma": "~6.3.0",
        "karma-chrome-launcher": "~3.1.0",
        "karma-coverage": "~2.0.3",
        "karma-jasmine": "~4.0.0",
        "karma-jasmine-html-reporter": "~1.7.0",
        "lint-staged": "^12.3.5",
        "ng-packagr": "^13.0.0",
        "postcss": "^8.4.6",
        "prettier": "^2.5.1",
        "semantic-release": "^19.0.2",
        "source-map-explorer": "^2.5.2",
        "tailwindcss": "^3.0.19",
        "typescript": "~4.4.3"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/ertunga/ng-snippets.git"
    },
    "license": "MIT"
}
